<div class="container-fluid vh-100 signup-container card" style="margin-top:100px">
    <div class="rounded d-flex justify-content-center">
        <div class="text-center"></div>
        <h3 id="signup-title">Sign up</h3>
    </div>
    <div class="signup-form">
        <form id="signup" class="signup-text">
            <div class="form-group">
                <label for="username" class="username-signup">Username:</label>
                <textarea class="form-control" type="text" id="username-signup" /></textarea>
            </div>
            <div class="form-group">
                <label for="email" class="email-signup">Email:</label>
                <textarea class="form-control" type="text" id="email-signup"></textarea>
            </div>
            <div class="form-group">
                <label for="password" class="password-signup">Password:</label>
                <textarea class="form-control" type="password" id="password-signup"></textarea>
            </div>
            <button class="btn btn-primary" id="signup-btn" type="submit">Sign up!</button>
        </form>
    </div>
    <br>
    <a href="/login" class="go-to-login">Need to log in instead? Click here!</a>
</div>
<script src="/js/signup.js"></script>