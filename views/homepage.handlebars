            <div class="drawer"></div>
            <div class="drawer"></div>
            <div class="drawer"></div>
        </div>
    </div>



    {{!-- INVENTORY LIST --}}
    <div class="inventory-list">
        <h3>My Inventory</h3>
        <ul class="list-group">
            <li class="list-group-item">{{liquor_type}}Placeholder</li>
            <li class="list-group-item">{{liquor_type}}Placeholder</li>
            <li class="list-group-item">{{liquor_type}}Placeholder</li>
            <li class="list-group-item">{{liquor_type}}Placeholder</li>
            <li class="list-group-item">{{liquor_type}}Placeholder</li>
        </ul>
    </div>



    {{!-- COMMENTS --}}
    <div class="comment-container mt-5">
        <div class="container-fluid vh-100 new-post-container" style="margin-top:300px">
            <div class="text-center">
                <h3 class="cheers-cont-title">Cheers to Comments!</h3>
                </br>
                <div id="dash-comments">
                    <ul>
                        {{#each comments}}
                        <li class="comment-list">" {{comment_text}} " - {{user.username}}</li>
                        {{/each}}
                    </ul>
                </div>
                </br>
