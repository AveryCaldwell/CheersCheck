{{#if loggedIn}}
<h1 id="home-greeting"> Cheers, {{user.username}}!</h1>
{{/if}}
{{!-- {{#if loggedIn}} --}}
<div class="container-fluid vh-100 new-post-container" style="margin-top:100px">
    <div class="rounded d-flex justify-content-center inventory-container">
        <div class="col-md-4 col-sm-12 shadow-lg p-5 " id="inventory-card">
            <div class="text-center">
                <h3 id="inventory-title">Add To Inventory</h3>
            </div>
            <div class="p-4">
                <div class="input-group mb-3 title-text-add">
                    <span class="input-group-text"><i class="bi "></i></span>
                    <input type="text" class="form-control" placeholder="Alcohol Type">
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="bi"></i></span>
                    <input type="text" class="form-control content" placeholder="Name">
                </div>
                <div class="input-group mb-3 bottle-size">
                    <span class="input-group-text">
                        <i class="bi "></i></span>
                    <input type="text" class="form-control" placeholder="Size">
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <i class="bi "></i>
                    </span>
                    <input type="text" class="form-control" placeholder="Description"> </input>
                </div>
                <div class="d-grid col-12 mx-auto">
                    <button class="btn " id="add-post-button" type="submit"><span></span>
                        Cheers!</button>
                </div>
            </div>
            <div class="col-md-4 d-sm-none d-md-block"></div>
            <img src="./images/bar-logo.png" class="d-block w-100 img-fluid" alt="image">
            {{!-- {{#if loggedIn}} --}}
            <p id="inventory-link">Go to your <a href="/inventory" class="inv-link">Liquor
                    Cabinet</a> </p>
            {{!-- {{/if}} --}}
        </div>
    </div>


    {{!-- CABINET --}}
    <div class="container">
        <div class="inventory-cabinet">
